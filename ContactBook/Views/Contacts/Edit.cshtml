@{
}

@model ContactBook.Models.Entities.Contact

<h1>Edit Contact</h1>

@if (Model is null)
{
    <p>No Contact was found with this Id</p>
}

else
{

    <form method="post">
        <div class="mt-3">
            <label class="form_label">Id</label>
            <input type="text" class="form_control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form_label">Name</label>
            <input type="text" class="form_control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form_label">Email</label>
            <input type="email" class="form_control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form_label">Phone</label>
            <input type="text" class="form_control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Favorite" asp-for="Favorite" />
            <label class="form-check-label" for="Favorite">Favorite</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Contacts">Delete</button>
        </div>


    </form>
}