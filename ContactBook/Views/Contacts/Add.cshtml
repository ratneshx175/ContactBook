@model ContactBook.Models.AddContactViewModel


<h1>Add Contact</h1>

<form method="post">
<div class="mt-3">
    <label class="form_label">Name</label> 
    <input type="text" class="form_control" asp-for="Name"/>
</div>

<div class="mt-3">
    <label class="form_label">Email</label>
    <input type="email" class="form_control" asp-for="Email"/>
</div>

<div class="mt-3">
    <label class="form_label">Phone</label>
        <input type="text" class="form_control" maxlength="10" pattern="\d{10}" title="Please enter exactly 10 digits" asp-for="Phone" required/>
        <small class="form-text text-muted">Please enter a 10-digit phone number.</small>
</div>

<div class="mt-3">
    <input type="checkbox" class="form-check-input" id="Favorite" asp-for="Favorite" />
    <label class="form-check-label" for="Favorite">Favorite</label>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>