@{
}

@model List<ContactBook.Models.Entities.Contact>


<div class="Contacth1">

    <h1>Contacts</h1>

    <a class="btn " id="AddButton" asp-controller="Contacts" asp-action="Add"><h4>+ Add</h4></a>
</div>


<table class="table">
    <thead>
        <tr>
            <th class="hide-on-small1">Id</th>
            <th>Name</th>
            <th class="hide-on-small2">Email</th>
            <th>Phone</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var Contact in Model)
        {
            <tr>
                <td class="hide-on-small1">@Contact.Id</td>
                <td>@Contact.Name</td>
                <td class="hide-on-small2">@Contact.Email</td>
                <td>@Contact.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Contacts" asp-action="Edit" asp-route-id="@Contact.Id">Edit</a>
                </td>

                <td>
                    <form method="post">
                        <div>
                            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Contacts" asp-route-id="@Contact.Id">Delete</button>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>